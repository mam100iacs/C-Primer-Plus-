	pint = cups * 0.5;
	ounce = cups * 8;
	printf("pint=%f\n", pint);
	printf("ounce=%d\n", ounce);
	printf("soupspoon=%d\n", ounce * 2);
	printf("teaspoon=%d\n", ounce * 2 * 3);
